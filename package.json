{
    "name": "oi-extension",
    "displayName": "OpenIndus",
    "description": "Programming environment for OpenIndus Devices",
    "version": "1.2.1",
    "publisher": "OpenIndus",
    "repository": {
        "type": "git",
        "url": "https://github.com/openindus/oi-extension.git"
    },
    "icon": "static/logo_blanc.png",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:openindus-treeview"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "openindus.createProject",
                "title": "Create a Project Application"
            },
            {
                "command": "openindus.getSystemInfo",
                "title": "Get System Information"
            },
            {
                "command": "openindus.flashDeviceFirmware",
                "title": "Update Device firware"
            },
            {
                "command": "openindus.openinduswebsite",
                "title": "Visit OpenIndus Website"
            },
            {
                "command": "openindus.startStepperPanelConfig",
                "title": "Configure OIStepper"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "openindus-treeviewcontainer",
                    "title": "OpenIndus",
                    "icon": "static/logoMenu.png"
                }
            ]
        },
        "views": {
            "openindus-treeviewcontainer": [
                {
                    "id": "openindus-treeview",
                    "name": "OpenIndus",
                    "contextualTitle": "OpenIndus",
                    "icon": "static/logoMenu.png"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run clean ; npm install ; npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "vscode-test",
        "clean": "powershell -Command \"@('out','resources', '.vscode-test') | ForEach-Object { Remove-Item -Path $_ -Recurse -ErrorAction SilentlyContinue }\""
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/crypto-js": "^4.2.2",
        "@types/node": "^22.19.1",
        "@types/tar": "^6.1.13",
        "@types/vscode": "^1.100.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.13.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.26.0"
    },
    "dependencies": {
        "@microsoft/vscode-file-downloader-api": "^1.0.1",
        "@vscode/vsce": "^3.7.0",
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "async-mutex": "^0.5.0",
        "atob-lite": "^2.0.0",
        "crypto-js": "4.2.0",
        "pako": "^2.1.0",
        "serialport": "^10.5.0",
        "tar": "^7.5.2"
    },
    "keywords": [
        "openindus",
        "esp32",
        "firmware",
        "flash"
    ],
    "extensionDependencies": [
        "espressif.esp-idf-extension",
        "mindaro-dev.file-downloader"
    ]
}
