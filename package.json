{
    "name": "oi-extension",
    "displayName": "OpenIndus",
    "description": "Programming environment for OpenIndus Devices",
    "version": "0.0.4",
    "publisher": "OpenIndus",
    "repository": {
        "type": "git",
        "url": "https://github.com/openindus"
    },
    "icon": "resources/logo.png",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "openindus.createproject",
                "title": "Create a Project Application"
            },
            {
                "command": "openindus.getDeviceId",
                "title": "Get Device ID"
            },
            {
                "command": "openindus.updateDeviceId",
                "title": "Update Device ID"
            },
            {
                "command": "openindus.flashDeviceFirmware",
                "title": "Update Device firware"
            },
            {
                "command": "openindus.flashDeviceOnBus",
                "title": "Update slave device on bus"
            },
            {
                "command": "openindus.openinduswebsite",
                "title": "Visit OpenIndus Website"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "openindus-treeviewcontainer",
                    "title": "OpenIndus",
                    "icon": "resources/logoMenu.png"
                }
            ]
        },
        "views": {
            "openindus-treeviewcontainer": [
                {
                    "id": "openindus-treeview",
                    "name": "OpenIndus",
                    "contextualTitle": "OpenIndus"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "platformio-node-helpers": "^9.2.3",
        "python-shell": "^3.0.0"
    },
    "extensionDependencies": [
        "platformio.platformio-ide"
    ]
}
